function style=loadPixieStyle(filename)
% Loads style structure from file.
%
% loadPixieStyle(filename)    loads the style structure from the file with
% name 'filename' and provides it as an output. 

currentDir=pwd;
dir=whichdir('loadPixieStyle.m');

if ispc
    parser='\';
elseif ismac
    parser='/';
else
    parser='/';
end
cd([dir 'styles' parser])
eval([dir 'styles' parser filename]);

end